                    <div id="tablesss">

                    </div>
                    <div id="demo7" style=" text-align: center; margin-top: 30px;" ></div>

					
                    <script>

                        jQuery(document).ready(function(){
                            var total;
                            var mycars=new Array();
                            var cuur=1;
                            var pagelimit=2;
                            function loadajax(action,table,field,values,page_size,page_no,moudle_id){
                                jQuery.ajax({
                                    type:"POST",
                                    cache: false,
                                    async:false,
                                    url:"/ajax.jsp",
                                    dataType:"json",
                                    // data:"action=select&table=stu&field=name,age&values=c,5&page_size=&page_no=1&moudle_id=1",
                                    data:"action="+action+"&table="+table+"&field="+field+"&values="+values+"&page_size=4"+"&page_no="+page_no+"&moudle_id="+moudle_id,
                                    error:function(){alert("数据错误，操作被取消！");},
                                    success:function(data){
                                        if(data.state=="error"){alert("系统错误，操作被取消！");return;}
                                        total=data.data.total;
                                        mycars[0]=total;
                                        var message=data.data.data;
                                        //console.log(message);
                                        $("#tablesss").html('');
                                        for(var i=0;i<message.length;i++){
                                            $("#tablesss").append("<div class='ghs_div'  style='width:100%;'><div style='width: 20%;height: 100px;'><input type='image' src='$!webPath/resources/style/system/manage/black/img/raw_1495541442.jpeg' style='padding-left: 10px;padding-top: 8px;'/></div>" +
                                                "<div style='width: 40%;height: 100px;'><p style='padding-left: 10px;padding-top: 20px;'>"+message[i]['ds_storeName']+"<span style='background: red;padding: 2px;border-radius: 80%'>1万+</span></p>" +
                                                "<p>"+message[i]['ds_userName']+"&nbsp;&nbsp;"+message[i]['ds_phone']+"&nbsp;&nbsp;"+message[i]['create_dateds_endTime']+"至"+message[i]['create_dateds_beginTime']+"</p></div>" +
                                                "<div style='width: 30%;height: 100px;'><p style='padding-left: 10px;padding-top: 50px;'>"+message[i]['ds_address']+"&nbsp;&nbsp;<i class='icon-map-marker'></i></p></div>" +
                                                "<div style='width: 10%;height: 100px;' class='last'><p><span onclick='delClick(\""+message[i]['id']+"\")'>删除</span></p><p><span><a href='$!webPath/seller/open_store_edit.htm?id="+message[i]['id']+"'>修改</a></span></p></div></div>");

                                        }
                                    }


                                });
                            }
                            loadajax("select","wemall_directsale_store","states","1",pagelimit,cuur,1);
                            layui.use(['laypage', 'layer'], function(){
                                var laypage = layui.laypage
                                    ,layer = layui.layer;
                                //完整功能
                                laypage.render({
                                    elem: 'demo7'
                                    ,count:total
                                    ,layout: ['count', 'prev', 'page', 'next', 'limit', 'skip']
                                    ,jump: function(obj){
                                        //console.log(obj)
                                        cuur=obj.curr;
                                        pagelimit=obj.limit;
                                        //alert(pagelimit);
                                        loadajax("select","wemall_directsale_store","states","1",pagelimit,cuur,1);
                                        //loadajax("select","stu",pagelimit,cuur,1);
                                    },
                                    limits:[2, 4, 6, 8, 10],
                                    limit:pagelimit
                                });
                            });
                        });
                        
                        function delClick(id)
                        {
                        	jQuery.ajax({
                                type: "POST",
                                cache: false,
                                async: false,
                                url: "/ajaxuser.jsp",
                                dataType: "json",
                                data: "action=update&table=wemall_directsale_store&field=id,states&values="+id+"|0",
                                error: function () {
                                    alert("数据错误，操作被取消！");
                                },
                                success: function (data) {
                                    if (data.state == "error") {
                                        alert("系统错误，操作被取消！");
                                        return;
                                    } else {
                                        alert("操作成功！");
                                        window.location.href='$!webPath/seller/open_store.htm';
                                    }
                                }
                            });
                        }

                    </script>
