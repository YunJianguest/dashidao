<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<!--link href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/template.css"  rel="stylesheet" type="text/css"/-->
	<!--link  href="$!webPath/resources/style/common/css/jquery-ui-1.8.22.custom.css" type=text/css rel=stylesheet-->

	<link href="$!webPath/resources/style/system/manage/black/01.css"  rel="stylesheet" type="text/css"/>
	<link rel="stylesheet" href="$!webPath/resources/style/system/manage/black/bootstrap.min.css" type="text/css"/>
	<link rel="stylesheet" href="$!webPath/resources/style/system/manage/black/font-awesome.min.css"  type="text/css">
	<script src="$!webPath/resources/js/jquery-1.9.1.min.js"></script>
	<script src="$!webPath/resources/js/bootstrap.min.js"></script>
	<!--layui-->
	<link rel="stylesheet" href="$!webPath/resources/style/system/front/default/css/layui.css" type="text/css" rel="stylesheet" >
	<script src="$!webPath/resources/style/system/front/default/layui.js"></script>

	<title>总部平台首款账号（银行卡管理）</title>
	<style>
		.bank{
			width: 160px;
			height: 50px;
			line-height: 50px;
			float: right;
			border-radius: 4px;
			margin-right:10px;
			color: rgba(16, 16, 16, 1);
			font-size: 18px;
			text-align: center;
			border: 1px solid rgba(187, 187, 187, 1);
		}
		.bank_card li{float: left;width:50%;margin-top: 20px;}
		.clear{clear: both;}
		.bank_card input{width: 30px;height:30px;background: #3F51B5;border: 5px solid #3F51B5;}
		.tdot{border:1px solid #c3c3c3;}
		.tdot img{width:100%;}
		.two{font-size: 16px; text-align:center; }
	</style>
</head>

<body>
<center>
	<div style="width: 80%;margin: 0 10%">
		<div style="margin-top: 32px;width:90%;height:60px;display: block;margin-right: 100px;">
			<a href='$!webPath/admin/add_bank.htm'><div class="bank">添加银行卡</div></a>
			<div class="bank" onclick="cc()">取消绑定</div>
			<div class="clear" ></div>
		</div>
		<div style="margin-top:25px; ">
			<ul class="bank_card">

				<table width="100%">
					<tbody  id="tablesss" >

					</tbody>
				</table>


				<div class="clear"></div>
			</ul>
		</div>

	</div>
	<div id="demo7" style=" text-align: center; margin-top: 30px;" ></div>
	<script>
        $(".pagination li").click(function(){
            $(this).addClass("active");
            $(this).siblings().removeClass("active");
        })
	</script>

	<script>
        jQuery(document).ready(function(){
            var mycars=new Array()
            var cuur=1;
            var pagelimit=10;
            function loadajax(action,table,field,values,page_size,page_no,moudle_id){
                jQuery.ajax({
                    type:"POST",
                    cache: false,
                    async:false,
                    url:"/ajax.jsp",
                    dataType:"json",
                    // data:"action=select&table=stu&field=name,age&values=c,5&page_size=&page_no=1&moudle_id=1",
                    data:"action="+action+"&table="+table+"&field="+field+"&values="+values+"&page_size="+page_size+"&page_no="+page_no+"&moudle_id="+moudle_id,
                    error:function(){alert("数据错误，操作被取消！");},
                    success:function(data)
                    {
                        if(data.state=="error"){alert("系统错误，操作被取消！");return;}
                        total=data.data.total;
                        mycars[0]=total;
                        var message=data.data.data;
                        //console.log(message);
                        $("#tablesss").html('');
                        for(var i=0;i<message.length;i++){
                            $("#tablesss").append("<li><table width='80%'><tr><td width='20%'><input type='hidden' value='"+message[i]['id']+"' id='id' class='id'><input type='checkbox'></td><td width='90%' class='tdot'><img src='"+"$!webPath/resources/"+ message[i]['zb_tupian']+"'alt=\"\"></td><td class='tdot two'>"+message[i]['zb_zhanghumingcheng']+"</td></tr></table></li>");
                        }
                    }
                });
            }
            loadajax("select","zb_pingtaishoukuan","states","1",pagelimit,cuur,1);
            layui.use(['laypage', 'layer'], function(){
                var laypage = layui.laypage
                    ,layer = layui.layer;
                //完整功能
                laypage.render({
                    elem: 'demo7'
                    ,count:total
                    ,layout: ['count', 'prev', 'page', 'next', 'limit', 'skip']
                    ,jump: function(obj){
                        //console.log(obj)
                        cuur=obj.curr;
                        pagelimit=obj.limit;
                        //alert(pagelimit);
                        loadajax("select","zb_pingtaishoukuan","states","1",pagelimit,cuur,1);
                        //loadajax("select","stu",pagelimit,cuur,1);
                    },
                    limits:[2, 4, 6, 8, 10],
                    limit:pagelimit
                });
            });
        });


        function cc() {
            var id = "";
            var i = 0;
            $("input[type='checkbox']").each(function () {
                if (this.checked == true) {
                    if (i != 0) {
                        id += ",";
                    }
                    id += $(this).prev().val();
                    i++;
                }
            })

            var ids= id.split(",")
            for(var i=0;i<ids.length;i++){
                //alert("action=update&table=zb_fenpeishezhinew&field=id,hy_jf_gz&values="+fpszId+"|"+hyjf);
                jQuery.ajax({
                    type: "POST",
                    cache: false,
                    async: false,
                    url: "/ajax.jsp",
                    dataType: "json",
                    // data:"action=update&table=stu&field=name,age&values=c,5&page_size=&page_no=1&moudle_id=1",
                    data: "action=update&table=zb_pingtaishoukuan&field=id,states&values=" + ids[i] + "|2",
                    success:function(data)
                    {
                        if(data.code=="0"){alert("系统错误，操作被取消！");return;}
                        //alert(data.data);
                        if(data.data=="1"){
                            //    <li op="yinhangka_manager"><a href='$!webPath/seller/yinhangka_manager.htm'>银行卡管理</a></li>
                            location.href='$!webPath/admin/ptskzhh.htm';
                        }
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {

                        alert(XMLHttpRequest.status); // 200
                        alert(textStatus); // parsererror
                        alert(errorThrown); // SyntaxError: Unexpected end of input

                    }
                });
            }

        }

	</script>
</center>
</body>
</html>
