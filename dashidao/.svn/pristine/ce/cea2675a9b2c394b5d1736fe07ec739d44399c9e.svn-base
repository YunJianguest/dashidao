<div id="demo7" style=" text-align: center; margin-top: 30px;" ></div>
<script>
    jQuery(document).ready(function(){
        var mycars=new Array()
        var cuur=1;
        var pagelimit=10;
        function loadajax(action,table,field,values,page_size,page_no,moudle_id){
            jQuery.ajax({
                type:"POST",
                cache: false,
                async:false,
                url:"/ajax.jsp",
                dataType:"json",
                // data:"action=select&table=stu&field=name,age&values=c,5&page_size=&page_no=1&moudle_id=1",
                data:"action="+action+"&table="+table+"&field="+field+"&values="+values+"&page_size="+page_size+"&page_no="+page_no+"&moudle_id="+moudle_id,
                error:function(){alert("数据错误，操作被取消！");},
                success:function(data)
                {
                    if(data.state=="error"){alert("系统错误，操作被取消！");return;}
                    total=data.data.total;
                    mycars[0]=total;
                    var message=data.data.data;
                    //console.log(message);
                    $("#tablesss").html('');
                    for(var i=0;i<message.length;i++){
                        $("#tablesss").append("<tr><td>"+message[i]['zb_hanghao']+"</td><td>"+message[i]['zb_huodong']+"</td><td>"+message[i]['zb_huodongmingcheng']+"</td><td>"+message[i]['zb_shijian']+"</td><td>"+message[i]['zb_huodongxiaoshoue']+"</td><td>"+message[i]['zb_huodongdingdanliang']+"</td></tr>");
                    }
                }
            });
        }
        loadajax("select","zb_yingxiaohuodong","zb_zhuangtai,zb_time","1,1",pagelimit,cuur,1);
        layui.use(['laypage', 'layer'], function(){
            var laypage = layui.laypage
                ,layer = layui.layer;
            //完整功能
            laypage.render({
                elem: 'demo7'
                ,count:total
                ,layout: ['count', 'prev', 'page', 'next', 'limit', 'skip']
                ,jump: function(obj){
                    //console.log(obj)
                    cuur=obj.curr;
                    pagelimit=obj.limit;
                    //alert(pagelimit);
                    loadajax("select","zb_yingxiaohuodong","zb_zhuangtai,zb_time","1,1",pagelimit,cuur,1);
                    //loadajax("select","stu",pagelimit,cuur,1);
                },
                limits:[2, 4, 6, 8, 10],
                limit:pagelimit
            });
        });
    });
</script>
