
		<style type="text/css">
			#adv{height: 120px;border-bottom:3px solid #c3c3c3; font-size: 17px; background: #f7f7f7;}
		</style>
	
		<div id="adv"><img src="img/details.png"/></div>
	
<script>
	jQuery(document).ready(function(){
		var sql="SELECT * FROM dashidao_top_advert WHERE deleteStatus=0 and advert_type=2 and addTime=(select max(addTime) from dashidao_top_advert where advert_type=2)";
        jQuery.ajax({
            type:"POST",
            cache: false,
            async:false,
            url:"/ajaxuser.jsp",
            dataType:"json",
            data:"table=dashidao_navigation&dates=addTime&sql="+sql,
            error:function(){alert("数据错误，操作被取消！");},
            success:function(data){
                var message = data.data.data;
                console.log(message);
                var path = message[0]['path'];
                var name = message[0]['name'];
                var url = message[0]['url'];
                var src = "http://localhost:8080/"+path+"/"+name;
                $("#adv").html("");
                $("#adv").append("<img src='"+src+"' width='100%' height='120px' onclick='advert_url("+url+")'/>");
            }
        });
	});
	
	function advert_url(url){
		window.location.href=url;
	}
</script>