	<script>
	jQuery(document).ready(function(){
	  
	});
	
	
	//提交
	function subClick()
	{
		var ds_storeName = $("#ds_storeName").val();
		var ds_userName = $("#ds_userName").val();
		var ds_passWord = $("#ds_passWord").val();
		var ds_phone = $("#ds_phone").val();
		var ds_phoneName = $("#ds_phoneName").val();
		var ds_address = $("#ds_address").val();
		var ds_city = $("#ds_city").val();
		var create_dateds_beginTime = $("#create_dateds_beginTime").val();
		var create_dateds_endTime = $("#create_dateds_endTime").val();
		
		if((ds_storeName == null || ds_storeName=="") || (ds_userName=="" || ds_userName ==null)  || (ds_passWord ==null || ds_passWord=="")  || 
				(ds_phone==null || ds_phone=="")  || (ds_phoneName==null || ds_phoneName=="")  || (ds_address =="" || ds_address==null)  || 
				(ds_city==null || ds_city=="")  || (create_dateds_beginTime==null || create_dateds_beginTime=="")  || (create_dateds_endTime==null || create_dateds_endTime=="") )
		{
			alert("请完善信息");
			return;
		}
		if(!(/^1[3|4|5|8][0-9]\d{4,8}$/.test(ds_phone))){
            alert("不是完整的11位手机号或者正确的手机号前七位");
            return;
        }
		
		var today = new Date();
        var minutes;
        if(today.getMinutes()>=0&&today.getMinutes()<=9){
            minutes="0"+today.getMinutes();
        }else{
            minutes=today.getMinutes();
        }
        var passWord =md5(ds_passWord);
        //获取当前日期
        var nowdate = (today.getFullYear()) + "-" + (today.getMonth() + 1) + "-" + today.getDate()+" "+today.getHours()+":"+minutes+":"+today.getSeconds();
		var states ="1";
        var userid = "${user.id}";
		var field ="ds_userId,ds_storeName,ds_userName,ds_passWord,ds_phone,ds_phoneName,ds_address,ds_city,create_date,states,create_dateds_beginTime,create_dateds_endTime";
		var values =userid+","+ds_storeName+","+ds_userName+","+passWord+","+ds_phone+","+ds_phoneName+","+ds_address+","+ds_city+","+nowdate+","+states+","+create_dateds_beginTime+","+create_dateds_endTime;
		var field1= "addTime,gold,integral,loginCount,report,sex,status,user_credit,userName,password,userRole";
		var values1 =nowdate+",0,0,0,0,0,0,0,"+ds_userName+","+passWord+",SELLER";
		save(field,values,field1,values1);
	}
	
	function save(field,values,field1,values1)
	{
		jQuery.ajax({
            type:"POST",
            cache: false,
            async:false,
            url:"/ajax.jsp",
            dataType:"json",
            data:"action=insert&table=wemall_directsale_store&field="+field+"&values="+values,

            success:function(data)
            {
                if(data.code=="0"){alert("系统错误，操作被取消！");return;}
                var str='操作成功';
                if(str==data.msg){
                	saveUser(field1,values1);
                }
            data:"table=wemall_directsale_store&dates=create_date,create_dateds_beginTime,create_dateds_endTime&action="+action+"&field="+field+"&values="+values,
            error:function(){alert("数据错误，操作被取消！");},
            success:function(data){
                alert("添加完成");
                window.location.href="http://localhost:8080/seller/open_store.htm";
            data:"table=wemall_directsale_store&dates=create_date,create_dateds_beginTime,create_dateds_endTime&action="+action+"&field="+field+"&values="+values,
            error:function(){alert("数据错误，操作被取消！");},
            success:function(data){
                alert("添加完成");
                window.location.href="$!webPath/seller/open_store.htm";
            }
        }); 
		
	}
	
	function saveUser(field,values)
	{
		jQuery.ajax({
            type:"POST",
            cache: false,
            async:false,
            url:"/ajax.jsp",
            dataType:"json",
            data:"action=insert&table=dashidao_user&field="+field+"&values="+values,

            success:function(data)
            {
                if(data.code=="0"){alert("系统错误，操作被取消！");return;}
                var str='操作成功';
                if(str==data.msg){
                	 window.location.href='$!webPath/seller/open_store.htm';
                }
            }
        }); 
		
	}
	
	</script>
